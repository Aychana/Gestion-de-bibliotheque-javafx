<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.exam.LivreController">
    <children>
        <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion de la bibliothèque">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Label lineSpacing="2.0" style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bolder" text="Menu" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" onAction="#handleUsers" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des utilisateurs" />
                <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des livres" />
                <Button mnemonicParsing="false" onAction="#handleLoans" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des emprunts" />
                <Button mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Déconnexion" />
                <VBox fx:id="spacer" VBox.vgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleBackToMain" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Retour" />

            </children>
        </VBox>
        <VBox layoutX="212.0" prefHeight="600.0" prefWidth="857.0" style="-fx-padding: 20;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestion des livres">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <HBox spacing="10" style="-fx-spacing: 10;">
                    <children>
                        <TextField fx:id="titreField" promptText="Titre" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                        <TextField fx:id="auteurField" promptText="Auteur" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                        <TextField fx:id="isbnField" promptText="ISBN" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                        <TextField fx:id="genreField" promptText="Genre" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox spacing="10" style="-fx-spacing: 10;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleAddLivre" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Ajouter">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleUpdateLivre" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Modifier">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleDeleteLivre" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Supprimer">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Effacer">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <TableView fx:id="livreTable" prefHeight="300.0" prefWidth="792.0" style="-fx-background-color:white; -fx-border-color: #2c3e50; -fx-border-radius: 5px;">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="titreColumn" prefWidth="200.0" text="Titre" />
                        <TableColumn fx:id="auteurColumn" prefWidth="174.0" text="Auteur" />
                        <TableColumn fx:id="isbnColumn" prefWidth="153.0" text="ISBN" />
                        <TableColumn fx:id="genreColumn" prefWidth="168.0" text="Genre" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
