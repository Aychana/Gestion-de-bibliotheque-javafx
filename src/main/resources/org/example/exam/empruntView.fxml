<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="917.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.exam.EmpruntController">
    <children>
        <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion de la bibliothèque">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Label lineSpacing="2.0" style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bolder" text="Menu" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" onAction="#handleUsers" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des utilisateurs" />
                <Button mnemonicParsing="false" onAction="#handleBooks" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des livres" />
                <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des emprunts" />
                <Button mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Déconnexion" />
                <VBox fx:id="spacer" VBox.vgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleBackToMain" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Retour" />

            </children>
        </VBox>
        <VBox layoutX="200.0" prefHeight="600.0" prefWidth="774.0" style="-fx-padding: 20;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestion des emprunts">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-alignment: center-left; -fx-spacing: 20;">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Utilisateur" />
                                <ComboBox fx:id="userComboBox" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Livre" />
                                <ComboBox fx:id="livreComboBox" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Date d'emprunt" />
                                <DatePicker fx:id="dateEmpruntPicker" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Date de retour" />
                                <DatePicker fx:id="dateRetourPicker" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0" style="-fx-alignment: center; -fx-spacing: 20;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleAddEmprunt" prefWidth="150.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Ajouter" />
                        <Button mnemonicParsing="false" onAction="#handleUpdateEmprunt" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Modifier" />
                        <Button mnemonicParsing="false" onAction="#handleDeleteEmprunt" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Supprimer" />
                        <Button mnemonicParsing="false" onAction="#handleClear" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;" text="Effacer" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </HBox>
                <TableView fx:id="empruntTable" prefHeight="279.0" prefWidth="628.0" style="-fx-background-color: white;-fx-border-color: #2c3e50; -fx-border-radius: 5px;">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="idLivreColumn" prefWidth="150.0" text="Titre du Livre" />
                        <TableColumn fx:id="idUtilisateurColumn" prefWidth="150.0" text="Nom et Prénom" />
                        <TableColumn fx:id="dateEmpruntColumn" prefWidth="163.0" text="Date d'emprunt" />
                        <TableColumn fx:id="dateRetourColumn" prefWidth="154.0" text="Date de retour" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
