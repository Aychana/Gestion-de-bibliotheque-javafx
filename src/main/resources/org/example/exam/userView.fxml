<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.exam.UserController">
    <children>
        <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <children>
                <Label text="Gestion de la bibliothèque" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Label lineSpacing="2.0" style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bolder" text="Menu" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des utilisateurs" />
                <Button mnemonicParsing="false" onAction="#handleBooks" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des livres" />
                <Button mnemonicParsing="false" onAction="#handleLoans" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Gestion des emprunts" />
                <Button mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Déconnexion" />
                <VBox fx:id="spacer" VBox.vgrow="ALWAYS"></VBox>
                <Button mnemonicParsing="false" onAction="#handleBackToMain" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Retour" />
            </children>
        </VBox>
        <VBox layoutX="200.0" prefHeight="600.0" prefWidth="600.0" style="-fx-padding: 20;">
            <children>
                <Label text="Gestion des utilisateurs" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <HBox spacing="10" style="-fx-spacing: 10;">
                    <children>
                        <TextField fx:id="nomField" promptText="Nom" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                        <TextField fx:id="prenomField" promptText="Prénom" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                        <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                        <TextField fx:id="numeroDeTelephoneField" promptText="Téléphone" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox spacing="10" style="-fx-spacing: 10;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleAddUser" text="Ajouter" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleUpdateUser" text="Modifier" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleDeleteUser" text="Supprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleClear" text="Effacer" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10; -fx-border-radius: 5px;">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <TableView fx:id="userTable" prefHeight="300.0" prefWidth="560.0" style="-fx-background-color: white; -fx-border-color: #2c3e50; -fx-border-radius: 5px;">
                    <columns >
                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID"  />
                        <TableColumn fx:id="nomColumn" prefWidth="150.0" text="Nom"  />
                        <TableColumn fx:id="prenomColumn" prefWidth="150.0" text="Prénom" />
                        <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="numeroDeTelephoneColumn" prefWidth="150.0" text="Numéro de téléphone"  />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
